<Application x:Class="RESTLess.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:local="clr-namespace:RESTLess"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wpf="clr-namespace:RESTLess">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <!-- Bootstrapper -->
                <ResourceDictionary>
                    <wpf:AppBootstrapper x:Key="Bootstrapper"/>
                </ResourceDictionary>

                <!-- Common Brushes and styles -->
                <ResourceDictionary Source="Assets/CommonResources.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
